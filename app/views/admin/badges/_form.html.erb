<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p><br>

  <p>
    <%= form.label :rule %><br>
    <%= form.select :rule, Badge.rules.keys %>
  </p>

  <p>
    <%= form.label :img_url %> <br />
    <%= form.text_field :img_url %>
  </p>

  <p><%= form.submit %></p>
<% end %>

