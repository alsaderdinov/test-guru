<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name, id: :badge_name %>
  </p><br>

  <p>
    <%= form.label :rule %><br>
    <%= form.select :rule, Badge.rules.keys %>
  </p>

  <p>
    <%= form.label :rule_param %><br>
    <%= form.text_field :rule_param, id: :badge_rule_param %>
  </p>

  <p>
    <%= form.label :img_url %><br>
    <%= form.text_field :img_url, id: :badge_image %>
  </p>

  <p><%= form.submit %></p>
<% end %>

